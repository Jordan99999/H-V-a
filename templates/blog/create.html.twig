{# templates/blog/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un article{% endblock %}

{% block body %}
    {{ form_start(formArticle) }}
        {{ form_row(formArticle.title, { 'attr': { 'placeholder': "Titre de l'article" } }) }}
        {{ form_row(formArticle.category) }}
        {{ form_row(formArticle.content, { 'attr': { 'placeholder': "Contenu de l'article" } }) }}
        {{ form_row(formArticle.imageFile, { 'attr': { 'placeholder': "Uploader l'image" } }) }}
        <button type="submit" class="btn btn-primary">
            {% if editMode %}
                Enregistrer les modifications
            {% else %}
                Créer l'article
            {% endif %}
        </button>
    {{ form_end(formArticle) }}
{% endblock %}
