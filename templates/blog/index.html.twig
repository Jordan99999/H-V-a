{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<section class="articles">
    {% for article in articles %}
        <article class="col-md-4 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
            <h2>{{ article.title }}</h2>
            <div class="metadata">Ecrit le {{ article.createdAt|date('d/m/Y à H:i') }} dans la catégorie Politique</div>
            <div class="content">
                <img src="{{ article.image }}" alt="">
                <p>{{ article.content|raw }}</p>
                <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
            </div>
        </article>
    {% endfor %}
</section>
{% endblock %}
